@model Poe_part_2_Prog7311.Models.FarmerRegistrationViewModel

@{
    ViewData["Title"] = "Add Farmers";

}


<head>
    
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
         body { background-image: url('https://images.unsplash.com/photo-1671308819531-1097d5ab5dcc?w=1600&auto=format&fit=crop&q=80'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 100vh; margin: 0; padding: 0; display: flex; align-items: center; justify-content: center; position: relative; font-family: 'Segoe UI', sans-serif; }

            .form-container {
            background-color: rgba(52, 173, 84, 0.95);
            padding: 30px;
            border-radius: 15px;
            width: 400px;
            color: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            border: 2px solid white;
            }

            .form-container h2 {
                text-align: center;
                margin-bottom: 20px;
                color: white;
            }

            .form-container label {
                margin-bottom: 5px;
                display: block;
            }

            .form-container input {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: none;
                border-radius: 8px;
                font-size: 14px;
                background-color: white;
                color: black;
            }

            .form-container button {
                width: 100%;
                background-color: orange;
                color: white;
                border: none;
                padding: 12px;
                font-size: 16px;
                border-radius: 8px;
                cursor: pointer;
            }

            .form-container button:hover {
                background-color: darkorange;
            }

            .cancel-button {
                display: block;
                text-align: center;
                margin-top: 10px;
                color: white;
                text-decoration: underline;
            }

            .back-button {
                position: absolute;
                top: 20px;
                left: 20px;
            }

            .back-arrow {
                background-color: orange;
                color: white;
                padding: 10px 15px;
                border-radius: 50%;
                text-decoration: none;
                font-size: 20px;
            }

    </style>
</head>
<body>
    
    <div class="back-button">
        <a asp-controller="Employee" asp-action="Farmer" class="back-arrow">←</a>
    </div>

    <div class="form-container">
        <h2>Add Farmer</h2>

        <form asp-controller="Employee" asp-action="AddFarmer" method="post" enctype="multipart/form-data">
            <label>Full Name</label>
            <input asp-for="FullName" placeholder="Enter full name" required />

            <label>Email</label>
            <input asp-for="Email" type="email" placeholder="Enter email" required />

            <label>Password</label>
            <input asp-for="Password" type="password" placeholder="Enter password" required />

            <label>Phone Number</label>
            <input asp-for="PhoneNumber" placeholder="Enter phone number" required />

            <label>ID Number</label>
            <input asp-for="IDNumber" placeholder="Enter ID/passport" required />

            <label>Address</label>
            <input asp-for="Address" placeholder="Enter address" required />

            <label>Passport Photo</label>
            <input type="file" name="PassportPhoto" class="form-control" accept="image/*" required />

            <button type="submit">Add Farmer</button>
            <a asp-action="Farmer" class="cancel-button">Cancel</a>
        </form>
    </div>
</body>
