@model IEnumerable<Poe_part_2_Prog7311.Models.Product>

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <title>My Products</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://plus.unsplash.com/premium_photo-1686156706088-0102e1d11b9d?w=1600&auto=format&fit=crop&q=80&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8ZmFybWVyJTIwbWFya2V0JTIwcGxhY2V8ZW58MHx8MHx8fDA%3D');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 40px;
            font-family: 'Segoe UI', sans-serif;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .custom-btn {
            background-color: orange;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 8px;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
        }

            .custom-btn:hover {
                background-color: darkorange;
            }
        .product-card {
            background-color: rgba(255, 255, 255, 0.9);
            border: 2px solid green;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            width: 300px;
            overflow: hidden;
        }

            .product-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-bottom: 2px solid green;
            }

        .product-details {
            padding: 15px;
        }

            .product-details h5 {
                color: #2e7d32;
                margin-bottom: 10px;
            }

        .btn-group {
            display: flex;
            justify-content: space-between;
            padding: 10px 15px 15px;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        .back-arrow {
            background-color: orange;
            color: white;
            padding: 10px 15px;
            border-radius: 50%;
            text-decoration: none;
            font-size: 20px;
        }

        .add-product-container {
            margin-top: 60px; /* ou plus si tu veux plus d’espace */
        }

        .custom-btn {
            background-color: orange;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 8px;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
        }

            .custom-btn:hover {
                background-color: darkorange;
            }
    </style>
</head>

<body>
    <div class="back-button">
        <a asp-controller="Farmer" asp-action="FarmerHome" class="back-arrow">←</a>
    </div>

    <h2 class="text-center text-white mb-4">My Products</h2>

    <div class="card-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <img src="@product.ImagePath" alt="Product Image" />
                <div class="product-details">
                    <h5>@product.Name</h5>
                    <p><strong>Category:</strong> @product.Category</p>
                    <p><strong>Production Date:</strong> @product.ProductionDate.ToShortDateString()</p>
                </div>
                <div class="btn-group">
                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-success btn-sm">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        }
    </div>

    <div class="add-product-container text-center">
        <a asp-controller="Farmer" asp-action="AddProduct" class="btn custom-btn">
            ➕ Add Product
        </a>
    </div>
</body>
